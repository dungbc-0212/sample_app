<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.digit_50), micropost.user%>
  <span class="user">
    <%= link_to micropost.name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t("microposts.timestamp", time: time_ago_in_words(micropost.created_at)) %>.
    <% if current_user? micropost.user %>
      <%= button_to t("users.edit.delete"), micropost, method: :delete, data: {turbo_confirm: t("users.edit.confirm_text"), "turbo-method": :delete} %>
    <% end %>
  </span>
</li>
